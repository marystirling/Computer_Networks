#----------------------------------------------------------------------------
#       $Id$
#
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
#       Local macros
#----------------------------------------------------------------------------

BIN1		= server
BIN2		= client

FILES1	= server # add other files 
FILES2	= client

SRC1    	= $(addsuffix .cpp,$(FILES1))
OBJS1			= $(addsuffix .o,$(FILES1))

SRC2    	= $(addsuffix .cpp,$(FILES2))
OBJS2			= $(addsuffix .o,$(FILES2))

CXXFLAGS	= -g
LDFLAGS		= -lpthread

#----------------------------------------------------------------------------
#       Local targets
#----------------------------------------------------------------------------

all:	$(BIN1) $(BIN2)

$(BIN1) : $(OBJS1)
		$(CXX) -o $@ $^ $(LDFLAGS)

$(BIN2) : $(OBJS2)
		$(CXX) -o $@ $^ $(LDFLAGS)

#%.o: %.cpp
#		$(CXX) -c $(CXXFLAGS) $^ -o $@

$(OBJS1):	$(SRC1)
		$(CXX) -c $(CXXFLAGS) $^ -o $@

$(OBJS2):	$(SRC2)
		$(CXX) -c $(CXXFLAGS) $^ -o $@

clean:
	rm -fr *.o *.exe $(BIN1) $(BIN2)

#----------------------------------------------------------------------------
#       Dependencies
#----------------------------------------------------------------------------


